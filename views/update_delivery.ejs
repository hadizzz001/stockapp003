<%-include('include/_header')%>

<main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
<div class="filter">
    <a href="/delivery"><i class="fas fa-angle-double-left"></i>Previous Page</a>
</div>
        </div>

        <div class="form-title text-center">
            <h2 class="text-dark">Update Data</h2>
            <span class="text-light">Use the below form to update Delivery data</span>
        </div>

       
        <form id="update_delivery">
            <div class="new_user">
               <div class="form-group">
                   <label for="Dname" class="text-light">Delivery Name</label>
                   <input type="hidden" name="id" value="<%= delivery._id %>">
                   <input type="text" name="Dname" value="<%= delivery.Dname %>" oninput="this.value = this.value.toLowerCase()" placeholder="Delivery Name" required>
               </div> 
        
               
               <div class="form-group">
                   <label for="Damount" class="text-light">Delivery Amount($)</label> 
                   <input type="number" name="Damount" value="<%= delivery.Damount %>" placeholder="Delivery Amount" min="0" required>
               </div> 
        
               <div class="form-group">
                   <button type="submit" class="btn text-dark update">save</button>
               </div>
               
            </div>
        </form>


    </div>
</main>

<%-include('include/_footer')%>